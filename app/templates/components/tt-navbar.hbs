<div class="flex items-center flex-no-shrink text-black mr-6 mt-4 md:mt-0">
  <span class="font-semibold text-xl tracking-tight title-font">
    {{link-to "TillTax" "index"}}
  </span>
</div>
<div class="block md:hidden mr-4 mt-2">
  <button class="flex items-center px-3 py-2 border" {{action "toggleMenu" }}>
    <svg
      class="fill-current h-3 w-3"
      viewBox="0 0 20 20"
      xmlns="http://www.w3.org/2000/svg"
    >
      <title>Menu</title>
      <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z" />
    </svg>
  </button>
</div>
<div
  class="bg-grey-lighter md:bg-white w-full md:block flex-grow md:flex md:items-center md:w-auto mr-3 mt-2 md:mt-0 menu-items"
  hidden={{menuIsHidden}}
>
  <div
    class="text-sm md:flex-grow"
    onclick={{action "clickMenu"}}
    role="button"
  >
    {{yield}}
  </div>
</div>